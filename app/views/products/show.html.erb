<p>
  <strong>Product:</strong>
  <%= @product.name %>
</p>

<p>
  <%= image_tag "#{@product.image_url}", class: "product-pic" %>
</p>

<p>
  <strong>Product description:</strong>
  <%= @product.description %>
</p>
<% if current_user && current_user.admin? %>
  <p><%= link_to 'Edit', edit_product_path(@product) %></p>
<% end %>

<%- if user_signed_in? -%>
  <p><%= link_to 'Add a review for this product', new_product_review_path(@product) %></p>
<%- end -%>

<p></p>
<h3>Product reviews:</h3>
<ul id = reviews >
<p></p>
  <% @reviews.each do |review| %>
    <li><h5 id = review-title ><%= review.title %></h5>
    <p id = review-created >Created at <%= review.created_at %> by <%= review.username %></p>
    <p><%= review.content %></p>
    <% if current_user && (current_user.first_name == review.username || current_user.admin?) %>
      <p><%= link_to 'Edit', edit_product_review_path(@product, review) %> </p>
      <p>
        <%= link_to 'Delete', [review.product, review],
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
      </p>
    <% end %>
    </li>
  <% end %>
</ul>
