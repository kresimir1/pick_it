<%= form_for :product, url: products_path do |f| %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id %> 

  <p>
    <%= f.label :name, "Product Name" %><br>
    <%= f.text_field :name, size: 150 %>
  </p>

  <p>
    <%= f.label :description, "Product Description" %><br>
    <%= f.text_area :description, size: "150x10"%>
  </p>

  <p>
    <%= f.label :image_url, "Image_url(optional)" %><br>
    <%= f.text_field :image_url, size: 150 %>
  </p>

  <p>
    <%= f.submit class: 'submit-button'%>
  </p>

<% end %>
