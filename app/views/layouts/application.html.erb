<!DOCTYPE html>
<html>
  <head>
    <title>PickIt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar-default" >
          <ul>
              <li  class="active"><%= link_to 'Home', products_path %></li>
              <% if current_user && current_user.admin? %>
                <li><%= link_to 'Add new product',  new_product_path %></li>
                <li><%= link_to 'Members',  users_path %></li>
              <% end %>
              <li  class="logo"><%= image_tag "/assets/logo.jpg", height: '70', width: '70' %></li>
              <%- if user_signed_in? -%>
                <li class='user'><%= link_to 'Delete Profile', user_registration_path, :confirm => 'Are you sure you want to delete your account?', :method => :delete %></li>
                <li class='user'><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                <li class='user'><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete  %></li>
              <%- else -%>
                <li class='user'><%= link_to 'Sign In', new_user_session_path %></li>
                <li class='user'><%= link_to 'Sign Up', new_user_registration_path %></li>
              <%- end -%>
          </ul>
    </nav>

    <div class = "notice-alert">
      <p class="notice"><%= notice %></p>
      <p class="notice"><%= alert %></p>
    </div>

    <div class="container">
      <div class="background">
        <div class="transbox">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
